<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.HomeFragment">

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:mwhCloseColor="@color/primary"
        app:mwhStartColor="@color/primary"
        app:mwhVelocity="1.1"
        app:mwhWaveHeight="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fyp.sahayogapp.custom.CustomTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Order List"
            android:textColor="@color/white"
            android:textSize="32sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userListRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            tools:listitem="@layout/order_card_layout" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>