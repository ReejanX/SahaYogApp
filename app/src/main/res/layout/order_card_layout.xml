<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16sp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cardview_light_background"
        android:elevation="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/typeCard"
            app:layout_constraintStart_toStartOf="@id/layout1"
            app:layout_constraintTop_toTopOf="@id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="8dp"

            >

            <com.fyp.sahayogapp.custom.CustomTextView

                android:id="@+id/bloodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="B+"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontName="lato_bold" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            app:layout_constraintStart_toEndOf="@id/typeCard"
            app:layout_constraintTop_toTopOf="@id/typeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="8sp"
            android:orientation="vertical">

            <com.fyp.sahayogapp.custom.CustomTextView
                android:id="@+id/requestTypeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Request"
                android:textColor="@color/blue"
                android:textSize="20sp"
                app:fontName="lato_bold" />

            <com.fyp.sahayogapp.custom.CustomTextView
                android:id="@+id/requestStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In progress"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:fontName="lato_bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button"
            android:textAllCaps="false"
            android:id="@+id/donateBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Donate"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.fyp.sahayogapp.custom.CustomTextView
        android:id="@+id/messageTV"
        app:fontName="lato_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        android:text="loren ipsum "
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/messageTV">

        <com.fyp.sahayogapp.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Patient"
            android:textColor="@color/blue"
            android:textSize="12sp"
            app:fontName="lato_bold"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.fyp.sahayogapp.custom.CustomTextView
            android:id="@+id/patientNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="John Doe"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:fontName="lato_bold"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/layout2"
        app:layout_constraintTop_toBottomOf="@id/layout2">

        <com.fyp.sahayogapp.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Needs "
            android:textColor="@color/black"
            android:textSize="12dp" />

        <com.fyp.sahayogapp.custom.CustomTextView
            android:id="@+id/required_unitTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/blue"
            app:fontName="lato_bold" />

        <com.fyp.sahayogapp.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Unit/s"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <com.fyp.sahayogapp.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ( Remaining 1 )"
            android:textColor="@color/pink"
            android:textSize="12dp" />


    </LinearLayout>

    <com.fyp.sahayogapp.custom.CustomTextView
        android:id="@+id/dateTillTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Until 2 Feb"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/layout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout3" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#E2E2E2"
        app:layout_constraintTop_toBottomOf="@id/layout3" />


        <ImageView
            android:id="@+id/location_icon"
            app:layout_constraintStart_toStartOf="@id/line"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight=".2"
            android:src="@drawable/location" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/location_icon"
            app:layout_constraintTop_toTopOf="@id/location_icon"
            app:layout_constraintBottom_toBottomOf="@id/location_icon"
            android:id="@+id/venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="NGT, Chitwan, Nepal" />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

