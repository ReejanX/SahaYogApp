<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#61FAF9F6"
    android:orientation="vertical"
    tools:context=".donation.frags.RequestFragment">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/back" />

    <com.fyp.sahayogapp.custom.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Donation Request"
        android:textColor="@color/blue"
        android:textSize="26sp"
        app:fontName="lato_bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/requestCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                android:background="@color/cardview_dark_background"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <com.fyp.sahayogapp.custom.CustomTextView
                        android:id="@+id/typeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Request Type"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/typeRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/typeTv">

                        <RadioButton

                            android:id="@+id/radio_blood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/blue"
                            android:text="Whole Blood" />

                        <RadioButton
                            android:id="@+id/radio_platelets"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/blue"
                            android:text="Blood Platelets" />
                    </RadioGroup>

                <com.fyp.sahayogapp.custom.CustomTextView
                    android:id="@+id/bloodGroupTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="What Blood Group do you need?"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/typeRadio" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bloodGroupDD"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/blue"
                        app:layout_constraintTop_toBottomOf="@id/bloodGroupTV">

                        <AutoCompleteTextView
                            android:id="@+id/bloodGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--Select Blood Group--"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.fyp.sahayogapp.custom.CustomTextView
                        android:id="@+id/unitsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="How many pints of blood is needed?"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bloodGroupDD" />

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/blue"
                        app:layout_constraintTop_toBottomOf="@id/unitsTV">

                        <AutoCompleteTextView
                            android:id="@+id/units"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--Units of Blood Required--"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/infoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:background="@color/cardview_dark_background"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/requestCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <com.fyp.sahayogapp.custom.CustomTextView
                        android:id="@+id/patientTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Whom is the transfusion for?"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/patientNameED"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/blue"
                        app:layout_constraintTop_toBottomOf="@id/patientTv">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/patientNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Patient Name"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.fyp.sahayogapp.custom.CustomTextView
                        android:id="@+id/reasonTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="What's the reason for transfusion?"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/patientNameED" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/reasonED"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/blue"
                        app:layout_constraintTop_toBottomOf="@id/reasonTv">

                        <AutoCompleteTextView
                            android:id="@+id/reasonDD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--Reason for Blood Transfusion--"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hospitalCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:background="@color/cardview_dark_background"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/infoCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                    <com.fyp.sahayogapp.custom.CustomTextView
                        android:id="@+id/hospitalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Where do you need a Blood Donor?"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        app:fontName="lato_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hospitalET"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="@color/blue"
                        app:layout_constraintTop_toBottomOf="@id/hospitalTv">

                        <AutoCompleteTextView
                            android:id="@+id/hospitalDD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--Select Donation Venue--"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/setOnMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:drawableEnd="@drawable/location"
                        android:drawableTint="@color/blue"
                        android:text="Set on Map"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="@id/hospitalET"
                        app:layout_constraintTop_toBottomOf="@id/hospitalET" />

                    <com.fyp.sahayogapp.custom.CustomTextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Write a message for potential Donors?"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        app:fontName="lato_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/setOnMap" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/messageIL"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        app:hintTextColor="@color/blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/message">

                        <EditText
                            android:id="@+id/messageET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Explain donors why do you need blood and how urgent."
                            android:inputType="textMultiLine"
                            android:maxLines="4"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continueBtn"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_bg"
                android:drawableEnd="@drawable/forward"
                android:fontFamily="@font/lato_bold"
                android:inputType="number"
                android:padding="12dp"
                android:text="Done"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hospitalCard" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>